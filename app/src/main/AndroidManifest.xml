<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.buzzme">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_buzzme_neon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_buzzme_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NoPreviewWindow">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".InactiveActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".OverviewActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AddProjectActivity"
            android:label="@string/new_project"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RegistrationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ActiveActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AddTimeActivity"
            android:label="@string/change_time"
            android:screenOrientation="portrait" />
    </application>

</manifest>